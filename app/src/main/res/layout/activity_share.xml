<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_200"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/bt_wechat"
            android:layout_width="@dimen/margin_184"
            android:layout_height="@dimen/margin_184"
            android:drawableTop="@drawable/umeng_socialize_wechat"
            android:layout_margin="@dimen/margin_5"
            android:background="@color/white"

            />
        <Button
            android:id="@+id/bt_wxcircle"
            android:layout_width="@dimen/margin_184"
            android:layout_height="@dimen/margin_184"

            android:layout_margin="@dimen/margin_5"
            android:background="@drawable/umeng_socialize_wxcircle"
            />
    </LinearLayout>
</LinearLayout>
