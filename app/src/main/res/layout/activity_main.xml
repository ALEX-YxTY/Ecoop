<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/more_title_h"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_choose_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_20"
            android:clickable="true"
            android:drawablePadding="0dp"
            android:drawableRight="@drawable/bg_norrow_down"
            android:onClick="click"
            android:singleLine="true"
            android:textColor="@color/tv_cafe"
            android:textSize="@dimen/tv_36"
            android:visibility="visible" />

        <Button
            android:id="@+id/bt_return"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_20"
            android:background="@color/white"
            android:drawableLeft="@drawable/btn_back"
            android:onClick="click"
            android:text="返回"
            android:textColor="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@color/green_title"
            android:textSize="@dimen/more_title_txt_sz" />

        <ImageButton
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_20"
            android:background="@color/white"
            android:drawablePadding="0dp"
            android:src="@drawable/btn_share" />
        <ImageButton
            android:id="@+id/news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_20"
            android:background="@color/white"
            android:drawablePadding="0dp"
            android:src="@drawable/btn_news"
            android:visibility="gone"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dividers_color_dark" />

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/normal_bg" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dividers_color_dark" />

    <RadioGroup
        android:id="@+id/rg_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            style="@style/my_tab"
            android:layout_weight="1"
            android:drawableTop="@drawable/bg_home"
            android:text="@string/home"
            android:textColor="@color/btn_title"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_group_purchase"
            style="@style/my_tab"
            android:layout_weight="1"
            android:drawableTop="@drawable/bg_group_purchase"
            android:text="@string/group_purchase"
            android:textColor="@color/btn_title"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_order"
            style="@style/my_tab"
            android:layout_weight="1"
            android:drawableTop="@drawable/bg_order"
            android:text="@string/order"
            android:textColor="@color/btn_title"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_mine"
            style="@style/my_tab"
            android:layout_weight="1"
            android:drawableTop="@drawable/bg_mine"
            android:text="@string/mine"
            android:textColor="@color/btn_title"
            android:textSize="10sp" />


    </RadioGroup>
</LinearLayout>
