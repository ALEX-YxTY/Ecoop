<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_30"
            android:layout_marginRight="@dimen/margin_30"
            android:background="@color/bg_green" />

        <RelativeLayout
            android:id="@+id/rl_submit_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/margin_46"
            android:layout_marginLeft="@dimen/margin_30"
            android:layout_marginTop="@dimen/margin_46"
            android:background="@drawable/bg_icon_big_circular_green">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/submit_orders" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/submitorders"
                    android:textColor="@color/bg_green"
                    android:textSize="@dimen/tv_30" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_distribution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_46"
            android:layout_marginTop="@dimen/margin_46"
            android:background="@drawable/bg_icon_big_circular_green">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:src="@drawable/distribution" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/distribution"
                    android:textColor="@color/bg_green"
                    android:textSize="@dimen/tv_30" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_sign_for"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/margin_46"
            android:layout_marginRight="@dimen/margin_30"
            android:layout_marginTop="@dimen/margin_46"
            android:background="@drawable/bg_icon_big_circular_green">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:src="@drawable/sign_for" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/sign_for"
                    android:textColor="@color/bg_green"
                    android:textSize="@dimen/tv_30" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_15"
            android:layout_marginLeft="@dimen/margin_26"
            android:layout_marginTop="@dimen/margin_24"
            android:text="@string/order_state"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/tv_36" />

        <TextView
            android:id="@+id/tv_order_state_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_24"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_24"
            android:text="@string/order_state_name"
            android:textColor="@color/tv_green"
            android:textSize="@dimen/tv_34" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="1"
            android:src="@drawable/bg_address" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货人:"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/tv_36" />

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/tv_36" />

                <TextView
                    android:id="@+id/tv_phonenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phonenumber"
                    android:textColor="@color/tv_cafe"
                    android:textSize="@dimen/tv_30" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_20"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/address"
                    android:textColor="@color/tv_cafe"
                    android:textSize="@dimen/tv_30" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/next" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_26"
            android:layout_marginTop="@dimen/margin_10"
            android:text="@string/order_no"
            android:textColor="@color/tv_black2"
            android:textSize="@dimen/tv_36" />

        <TextView
            android:id="@+id/tv_order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:text="989898232"
            android:textColor="@color/tv_black2"
            android:textSize="@dimen/tv_34" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginLeft="@dimen/margin_26"
            android:layout_marginTop="@dimen/margin_5"
            android:text="@string/order_time"
            android:textColor="@color/tv_black2"
            android:textSize="@dimen/tv_36" />

        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_5"
            android:text="2015-12-31 12:23:24"
            android:textColor="@color/tv_black2"
            android:textSize="@dimen/tv_34" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginLeft="@dimen/margin_26"
            android:layout_marginTop="@dimen/margin_5"
            android:text="@string/distribution_way"
            android:textColor="@color/tv_black2"
            android:textSize="@dimen/tv_36" />

        <TextView
            android:id="@+id/tv_distribution_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_5"
            android:text="顺丰快递   8901890213"
            android:textColor="@color/tv_black2"
            android:textSize="@dimen/tv_34" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_26"
            android:text="商品信息"
            android:textSize="@dimen/tv_36" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/order_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_order_good"
                android:layout_width="@dimen/margin_127"
                android:layout_height="@dimen/margin_127"
                android:layout_marginLeft="@dimen/margin_20"
                android:src="@drawable/kiwi512" />

            <TextView
                android:id="@+id/tv_order_content"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_weight="1"
                android:text="新西兰奇异果一盒（12个）"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/tv_34" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text="¥10.80"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/tv_34" />

                <TextView
                    android:id="@+id/tv_market_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_15"
                    android:text="¥28.90"
                    android:textColor="@color/tv_gray"
                    android:textSize="@dimen/tv_30" />

                <TextView
                    android:id="@+id/tv_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_15"
                    android:text="1"
                    android:textColor="@color/tv_gray"
                    android:textSize="@dimen/tv_30" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/bt_confirm_team"
            android:layout_width="@dimen/margin_224"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/margin_15"
            android:background="@drawable/btn_gray_stroke"
            android:paddingBottom="@dimen/margin_5"
            android:paddingLeft="@dimen/margin_32"
            android:paddingRight="@dimen/margin_32"
            android:paddingTop="@dimen/margin_5"
            android:text="@string/confirm_team"
            android:textColor="@color/btn_tv_gray"
            android:textSize="@dimen/tv_30" />
    </LinearLayout>
</LinearLayout>
