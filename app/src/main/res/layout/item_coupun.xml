<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@drawable/bg_ticket"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_coupun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_green" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_28"
                android:layout_marginTop="@dimen/margin_36"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_price_yuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â¥"
                    android:textColor="@color/tv_orange"
                    android:textSize="@dimen/tv_36" />

                <TextView
                    android:id="@+id/tv_coupun_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/coupun_price"
                    android:textColor="@color/tv_orange"
                    android:textSize="@dimen/tv_80" />
            </LinearLayout>

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_36"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_coupun_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_28"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="@string/coupun_name"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/tv_36" />

                <TextView
                    android:id="@+id/tv_coupun_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_28"
                    android:text="@string/coupun_condition"
                    android:textColor="@color/tv_cafe"
                    android:textSize="@dimen/tv_36" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_validity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_28"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@string/validity"
                android:textColor="@color/tv_cafe"
                android:textSize="@dimen/tv_30" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>