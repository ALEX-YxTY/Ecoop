<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/normal_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/tv_goods_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/goods_title"
                    android:textColor="@color/tv_goods_title"
                    android:textSize="16sp"
                    android:visibility="gone"
                    />
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                     />
                <TextView
                    android:id="@+id/tv_team_way"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/bg_green_rect"
                    android:paddingBottom="1dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="1dp"
                    android:text="3人社"
                    android:textSize="12sp"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_good_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="【细腻多汁】"
                    android:textColor="@color/tv_goods_title"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/tv_goods_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/goods_content"
                    android:textColor="@color/tv_goods_title"
                    android:textSize="14sp" />
            </LinearLayout>



            <TextView
                android:id="@+id/tv_market_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="市场价: ¥30.80"
                android:layout_marginTop="8dp"
                android:textColor="@color/tv_goods_title"
                android:textSize="16sp"
                android:visibility="gone"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_team_intro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="细腻多汁1111111111111111111111111111111111111111111111111"
                        android:layout_marginLeft="4dp"

                        android:textSize="12sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    >
                    <TextView
                        android:id="@+id/tv_reminder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="【温馨提示】"
                        android:textColor="@color/tv_goods_title"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/tv_reminder_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/goods_content"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_20" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            >
            <TextView
                android:id="@+id/bt_team_buy"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="26.5dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bt_buy"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="23.5dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingTop="3dp"
                android:text="独买买不如"
                android:background="#feac08"
                android:textSize="10sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="23.5dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="众买买  >    "
                android:background="#feac08"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="23.5dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingTop="3dp"
                android:text="众买价: ¥"
                android:background="#feac08"
                android:textSize="10sp"
                />
            <TextView
                android:id="@+id/tv_team_price"
                android:layout_width="wrap_content"
                android:layout_height="23.5dp"
                android:text="10.8"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingRight="8dp"
                android:background="@drawable/bg_team_buy_r"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>